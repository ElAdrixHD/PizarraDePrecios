<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inicio.RegistroActivity"
    android:background="@color/primaryColor"
    android:padding="@dimen/login_padding">

    <Button
        android:id="@+id/btn_registro_cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Cancelar"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_registro_registar" />

    <Button
        android:id="@+id/btn_registro_registar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_shape_button_login"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Registratse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_registro_contrasenia" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_registro_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:errorTextAppearance="@style/Widget.TextInputLayout.Error"
        app:hintTextAppearance="@style/Widget.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Registro">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiled_registro_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:inputType="text"
            android:theme="@style/Widget.EditText.EditTextInputLayout" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_Registro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="REGISTRO"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/till_registro_apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:errorTextAppearance="@style/Widget.TextInputLayout.Error"
        app:hintTextAppearance="@style/Widget.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_registro_nombre">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiled_registro_apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:theme="@style/Widget.EditText.EditTextInputLayout"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_registro_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/till_registro_apellidos">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiled_registro_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo electrÃ³nico"
            android:inputType="text|textEmailAddress"
            android:singleLine="true"
            android:theme="@style/Widget.EditText.EditTextInputLayout" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_registro_contrasenia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:errorTextAppearance="@style/Widget.TextInputLayout.Error"
        app:hintTextAppearance="@style/Widget.TextInputLayout"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_registro_email"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiled_registro_contrasenia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/contrasenia"
            android:inputType="textPassword"
            android:singleLine="true"
            android:theme="@style/Widget.EditText.EditTextInputLayout" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_registro_confirmar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:errorTextAppearance="@style/Widget.TextInputLayout.Error"
        app:hintTextAppearance="@style/Widget.TextInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:passwordToggleEnabled="true"
        app:layout_constraintTop_toBottomOf="@+id/til_registro_email">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiled_registro_confirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirmar"
            android:inputType="textPassword"
            android:singleLine="true"
            android:theme="@style/Widget.EditText.EditTextInputLayout"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</android.support.constraint.ConstraintLayout>